function getBasketContent(MonParametre){
let fruits = ["strawberry","strawberry","strawberry","apple","apple","lime","lime","peach","pear","pear"];
var N= fruits.length
fruits.splice(-MonParametre);

console.log (N + " fruit(s) selected")
console.log (MonParametre)
if (MonParametre > N) {
console.log ("Too many fruit(s)selected")
}
return fruits
}

var MonParametre = 8;

//To test your function copy and paste the code from the last fiddle, and adapt it to fit the needs of this exercise.

//Being able to read, understand and adapt code is essential !

if (typeof getBasketContent === "function") {
	const fruits = getBasketContent(MonParametre)
	showMyBasket(fruits)
}
